<!--pages/music/music.wxml-->
<swiper indicator-dots="true" indicator-active-color="#d43c33" autoplay="true" interval="3000" duration="1000" class="swiper">
  <swiper-item wx:for="{{imgUrls}}" class="center">
    <image src="{{item.url}}" class="img"></image>
  </swiper-item>
</swiper>

<scroll-view class="list" enable-flex="true" scroll-x="true">
  <block wx:for="{{lists}}" wx:key="id">
    <my-list lists="{{item}}"></my-list>
  </block>
</scroll-view>

<view class="divLine"></view>

<view class="title">
<text class="rec">推荐歌单</text>
<text class="more"></text>
</view>

<view class="playlist-container">
  <block wx:for="{{playlist}}" wx:key="_id">
    <x-playlist playlist="{{item}}"></x-playlist>
  </block>
</view>
