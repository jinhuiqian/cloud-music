.progress-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.progress-times {
  width: 64rpx;
  padding: 0 20rpx;
  line-height: 30rpx;
  font-size: 24rpx;
  color: #fff;
}

.progress-content {
  position: relative;
  flex: 1;
}

.movable-area {
  position: absolute;
  left: 0;
  bottom: -14rpx;
  width: 100%;
  height: 34rpx;
}

.movable-view {
  width: 36rpx;
  height: 36rpx;
  margin-top: -6rpx;
  background-color: #fefefe;
  border-radius: 50%;
}